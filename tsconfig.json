{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      //      "dom",
      //      "dom.iterable",
      //      "esnext"
      "es2018",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "importHelpers": true
  },
  /*  "include": [
      "src"
      // add new directory
      // "test"
    ],*/
  "exclude": [
    "node_modules",
    "lib",
    "esm",
  ]
}
